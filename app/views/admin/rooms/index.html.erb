<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <h4 style="margin: 0;"><strong>ルーム一覧</strong></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th style="width: 10%;">ルームID</th>
            <th style="width: 70%;">ルーム名</th>
            <th style="width: 20%;">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= room.id %></td>
              <td>
                <% room.entries.each do |e| %>
                  <% unless e.user == current_user %>
                    <h4><strong style="display: inline-block; max-width: 600px; word-break: break-word;"><%= e.user.name %>さん</strong></h4>
                  <% end %>
                <% end %>
              </td>   
              <td><%= link_to 'ルーム詳細へ', admin_room_path(room), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>    

