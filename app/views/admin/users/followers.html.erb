<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12">
      <h3 style="margin: 0;"><strong><%= @user.name %>さんのフォロワーユーザー一覧</strong></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <% if @users.exists? %>
        <%= render "admin/users/index", users: @users, host: @user, type: "follower", btn: true%>
      <% else %>
        <h4><strong><%= @user.name %>さんのフォロワーユーザーはいません</strong></h4>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
      <%= paginate @users %>
    </div>
  </div>
  
</div>